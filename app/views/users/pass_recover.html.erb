<%= form_for @user, method: "put" do |f| %>

  <div class='field'>
    <%= f.label "new password" %><br />
    <%= f.password_field :password %>
  </div>
  <div class='field'>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
 <div class='actions'><%= f.submit %></div>
<% end %>
