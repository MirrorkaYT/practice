<div id= "content">


<h1>Articles</h1>

<p>
  <% if current_user %>
    <%= link_to 'New article', new_user_article_path(current_user.id) %>
  <% end %>
</p>

<div class="user_articles_content">


  <div class="user_articles">
  <span class="my_articles">My articles</span>
  <div class="separator_my_articles">
  </div>
    
    <% current_user.articles.each do |article| %>
      <div class="user_articles_title">
        <%= render partial: 'userarticles', locals: {article: article, checked: ""} %>
      </div>
    <% end %>
  </div>
</div>
<span class="all_articles">Unread</span>
<br>
<div class="separator_articles">
</div>

<span class="sorting">
  <%= render "sort" %>
</span>


<div class="articles" id="Unread">
  
<% @artIncompl.each do |article| %>
  <%= render partial: 'article', locals: {article: article, checked: ""} %>
<% end %>
</div>

<div id="formid">
</div>

  <div class="new_article">
  <%= link_to 'new', new_user_article_path(current_user.id), remote: true %>
</div>
  <div class="articles" id="Read">
  <div class="separator">
    
    <div class="separator_line"></div>
  </div>
  <h2>Read</h2>
    <% @artCompl.each do |article| %>
      <%= render partial: 'article', locals: {article: article, checked: "checked"} %>
    <% end %>
  </div>

</div>
